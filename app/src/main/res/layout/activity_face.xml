<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <hcmus.mdsd.itusgallery.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <hcmus.mdsd.itusgallery.camera.GraphicOverlay
            android:id="@+id/faceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </hcmus.mdsd.itusgallery.camera.CameraSourcePreview>
    <ImageButton
        android:id="@+id/btn_flip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:adjustViewBounds="false"
        android:background="#fff"
        android:src="@drawable/round_switch_camera_24"
        android:tint="#000" />
    <RelativeLayout
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#1A000000">
        <ImageButton
            android:id="@+id/btn_capture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/round_camera_24"
            android:background="@null"
            android:tint="#fff"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/btn_sticker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/btn_capture"
            android:layout_marginStart="50dp"
            android:src="@drawable/round_tag_faces_24"
            android:background="@null"
            android:tint="#fff"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sub_menu"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#1Affffff"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/round_arrow_back_24"
            android:tint="#fff"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_margin="5dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn_nothing"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/nothing"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/btn_eye"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/happy_star"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/btn_glasses"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/glasses"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/btn_thuglife_glasses"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/thug_life_glasses"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/btn_nose"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pig_nose_emoji"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/btn_mustache"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mustache"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/btn_hat"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/red_hat"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/preview_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#000">
        <ImageView
            android:id="@+id/img_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:scaleType="centerInside"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="bottom">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#000"
                android:background="#fff"/>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:textColor="#000"
                android:background="#fff"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>